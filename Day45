//find smallest and largest number
import java.util.*;
public class Main{
 
public static void main(String[] args) {
 
Scanner sc = new Scanner(System.in);
System.out.println("enter the size of an array: ");
int n = sc.nextInt();
int arr[] = new int[20];
System.out.println("enter the elements of an arrayy:");
 for(int i=0; i<n; i++){
     arr[i]=sc.nextInt();
 }

int smallest = arr[0];
int Largest = arr[0] ;
int temp;
 
for(int i = 0; i<n; i++ ){
         
        if(arr[i]>Largest){
        Largest = arr[i];
      }
      if(arr[i]<smallest){
          smallest = arr[i];
      }
}
      
              System.out.println("Smallest Number is : " + smallest);
            System.out.println("Largest Number is : " + Largest);
              
         }   }


 

